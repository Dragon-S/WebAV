  "version": "0.2.0",
  "configurations": [
    {
      "name": "avrecorder-canvas",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/lerna",
      "runtimeArgs": [
        "exec",
        "--scope",
        "avrecorder-canvas",
        "--",
        "node"
      ],
      "args": [
        "${workspaceRoot}/node_modules/.bin/vitest",
        "packages/av-canvas"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
    },
    {
      "name": "avrecorder-cliper",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/lerna",
      "runtimeArgs": [
        "exec",
        "--scope",
        "avrecorder-cliper",
        "--",
        "node"
      ],
      "args": [
        "${workspaceRoot}/node_modules/.bin/vitest",
        "packages/av-cliper"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
    }
  ]
}